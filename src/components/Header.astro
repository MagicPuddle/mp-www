---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav class="nav" id="nav-menu">
		<img class="logo-img" src="/logo.png" />
		<h1>{SITE_TITLE}</h1>
		<HeaderLink href="/"><i class="fa fa-igloo"></i></HeaderLink>
		<HeaderLink href="/news"><i class="fa fa-newspaper"></i></HeaderLink>
		<HeaderLink href="/shop"><i class="fa fa-wrench"></i></HeaderLink>
		<HeaderLink href="/techshop"><i class="fa fa-shop"></i></HeaderLink>

		<HeaderLink href="/about"><i class="fa fa-list"></i></HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">
			<i class="fa fa-github-alt"></i>
		</HeaderLink>
		<HeaderLink href="/contact.html">
			<i class="fa fa-address-book"></i>
		</HeaderLink>
	</nav>
</header>

<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>

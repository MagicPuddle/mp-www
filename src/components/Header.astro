---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---
<header>
	<img class="logo-img" src="src/assets/img/mplogo-sharp.png" />
    <h1>{SITE_TITLE}</h1>

<HeaderLink>
	<nav class="nav menu corner-round border" id="nav-menu">
		<HeaderLink href="/"><i class="fa fa-igloo"></i></HeaderLink>
		<HeaderLink href="/shop.html"><i class="fa fa-cog"></i></HeaderLink>
		<HeaderLink href="/shop.html"><i class="fa fa-shop"></i></HeaderLink>
		<HeaderLink href="/blog"><i class="fa fa-blog"></i></HeaderLink>
		<HeaderLink href="/about"><i class="fa fa-list"></i></HeaderLink>
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank"><i class="fa fa-twitter"></i></HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank"><i class="fa fa-github-alt"></i></HeaderLink>
		<HeaderLink href="/contact.html"><i class="fa fa-address-book"></i></HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>

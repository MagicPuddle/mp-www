---
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
const posts = getCollection('news').slice(0, 3);
---

<section class="corner-round border">
    <img class="div-banner" src="../banner.png" />
    <div id="news">
        <h2>
            <i class="fa-regular fa-newspaper"></i> News <i
                class="fa-regular fa-newspaper"></i>
        </h2>
        <ul>
            {posts.map((post) => (
                <li><FormattedDate date={post.data.pubDate} </> <a href={`/news/${post.slug}/`}>{post.data.title}</a>
                    </li>
                ))
            }
        </ul>
    </div>
</section>